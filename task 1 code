#!/bin/bash

URL="https://guvi.in"

HTTP_CODE=$(curl -o /dev/null -s -w "%{http_code}\n" "$URL")

echo "HTTP Status Code: $HTTP_CODE"

if [[ $HTTP_CODE -ge 200 && $HTTP_CODE -lt 300 ]]; then
    echo "✅ Success: The website is accessible."
else
    echo "❌ Failure: The website returned an error."
fi
